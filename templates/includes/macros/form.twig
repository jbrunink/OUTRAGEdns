{% macro text(options) %}
	<div class="control-group">
		<label class="control-label">{{ options.title }}</label>
		
		<div class="controls">
			<div class="control-wrap">
				<input{% if options.class %} class="{{ options.class|e }}"{% endif %} type="text"{% if options.field is not null %} name="{{ options.field|e }}"{% else %} readonly="readonly"{% endif %} value="{{ options.value|e }}"{% if options.placeholder %} placeholder="{{ options.placeholder|e }}"{% endif %} />
			</div>
		</div>
	</div>
{% endmacro %}

