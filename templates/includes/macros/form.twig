{% macro select(options) %}
	<div class="control-group">
		<label class="control-label">{{ options.title }}</label>
		
		<div class="controls">
			<div class="control-wrap">
				<select{% if options.class %} class="{{ options.class|e }}"{% endif %} {% if options.field is not null %} name="{{ options.field|e }}"{% else %} readonly="readonly"{% endif %}{% if options.placeholder %} placeholder="{{ options.placeholder|e }}"{% endif %}>
					{% if options.placeholder is not empty %}
						<option value="">{{ options.placeholder }}</option>
					{% endif %}
					
					{% if options.tuple is not empty %}
						{% for key, item in options.tuple %}
							{% if item is iterable %}
								<option value="{{ item.id|e }}"{% if options.value == item.id %} selected="selected"{% endif %}{% if options.additionalproperty %} data-{{ options.additionalproperty }}="{{ item[options.additionalproperty]|e }}"{% endif %}>{{ item.name|raw }}</option>
							{% else %}
								<option value="{{ key|e }}"{% if options.value == key %} selected="selected"{% endif %}>{{ item|raw }}</option>
							{% endif %}
						{% endfor %}
					{% endif %}
				</select>
			</div>
		</div>
	</div>
{% endmacro %}

{% macro checkbox(options) %}
	<div class="control-group">
		<label class="control-label">{{ options.title }}</label>
		
		<div class="controls">
			<div class="control-wrap">
				<input{% if options.class %} class="{{ options.class|e }}"{% endif %} type="checkbox" {% if options.field is not null %} name="{{ options.field|e }}"{% else %} readonly="readonly"{% endif %}{% if options.checked is not empty and options.checked != 0 %} checked="checked"{% endif %}{% if options.placeholder %} placeholder="{{ options.placeholder|e }}"{% endif %} value="1" />
			</div>
		</div>
	</div>
{% endmacro %}

{% macro hidden(options) %}
	<div class="control-group hide">
		<input{% if options.class %} class="{{ options.class|e }}"{% endif %} type="hidden" name="{{ options.field|e }}" value="{{ options.value|e }}" />
	</div>
{% endmacro %}

{% macro date(options) %}
	{% if options.value is empty or options.value == 0 %}
		{% set date = "" %}
	{% elseif options.value == "now" %}
		{% set date = "now"|date("d/m/Y") %}
	{% else %}
		{% set date = options.value|date("d/m/Y") %}
	{% endif %}
	
	<div class="control-group">
		<label class="control-label">{{ options.title }}</label>
		
		<div class="controls">
			<div class="control-wrap">
				<input class="inherit-datepicker{% if options.class %} {{ options.class|e }}{% endif %}" type="text" {% if options.field is not null %} name="{{ options.field|e }}"{% else %} readonly="readonly"{% endif %} value="{{ date }}"{% if options.placeholder %} placeholder="{{ options.placeholder|e }}"{% endif %} />
			</div>
		</div>
	</div>
{% endmacro %}